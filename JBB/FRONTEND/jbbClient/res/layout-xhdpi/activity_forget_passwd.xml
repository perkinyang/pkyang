<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#f7f7f7"
        android:padding="6dp" >

        <TextView
            android:id="@+id/top_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/icon_retrn"
            android:gravity="center_vertical"
            android:text="  忘记密码"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="8sp"
        android:background="#ebebeb" />

    <LinearLayout
        android:id="@+id/register_register_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/forget_pwd_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/inputlayout2"
            android:hint="请输入手机号"
            android:paddingBottom="10sp"
            android:paddingLeft="10sp"
            android:paddingTop="10sp"
            android:singleLine="true"
            android:textColor="#525252"
            android:textColorHint="#cccccc"
            android:inputType="phone"
            android:textSize="15sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5sp"
            android:background="#cccccc" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff">

        <EditText
            android:id="@+id/forget_pwd_sms_code"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/inputlayout2"
            android:hint="请输入验证码"
            android:paddingBottom="10sp"
            android:paddingLeft="10sp"
            android:paddingTop="10sp"
            android:singleLine="true"
            android:textColor="#525252"
            android:inputType="number"
            android:textColorHint="#cccccc"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/forget_pwd_get_code"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_weight="2"
            android:background="@drawable/inputlayout3"
            android:gravity="center"
            android:paddingBottom="5sp"
            android:paddingTop="5sp"
            android:text="获取验证码"
            android:textColor="#06a7e1"
            android:textSize="15sp" >
        </TextView>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5sp"
        android:background="#cccccc" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="15sp"
        android:orientation="horizontal" >

        <TextView
             android:id="@+id/forget_next"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_submit"
            android:gravity="center"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            android:text="下一步"
            android:textColor="#ffffff"
            android:textSize="18sp" >
        </TextView>
    </LinearLayout>

</LinearLayout>