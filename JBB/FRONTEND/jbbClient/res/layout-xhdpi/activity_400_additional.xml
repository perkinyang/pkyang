<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/nav_color"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/top_return"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/icon_retrn"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="  400附加功能"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/split_view_color" />
        </LinearLayout>

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:divider="@color/list_view_divider"
            android:dividerHeight="1dp" >
        </ListView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/main_gray"
        android:paddingBottom="5dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp" >

        <TextView
            android:id="@+id/detail_400_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/tel_400_order"
            android:gravity="center"
            android:padding="7dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="18sp" >
        </TextView>

        <TextView
            android:id="@+id/detail_400_order_intent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/detail_400_order"
            android:background="@drawable/tel_400_order_intent"
            android:gravity="center"
            android:padding="7dp"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="18sp" >
        </TextView>

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/detail_400_order_intent"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/detail_400_order_intent"
            android:layout_centerVertical="true"
            android:paddingLeft="8dp"
            android:text="全选" />
    </RelativeLayout>

</RelativeLayout>