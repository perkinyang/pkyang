<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#f7f7f7"
        android:padding="6dp" >

        <TextView
            android:id="@+id/top_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/icon_retrn"
            android:gravity="center_vertical"
            android:text="  选号"
            android:textSize="18sp" />
    </LinearLayout>

   
    <View
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:background="#ebebeb" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:background="#ffffff" 
        android:paddingLeft="10dp"     
        android:paddingRight="10dp"    
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tel_400_top_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="顶级号"
            android:drawableTop="@drawable/icon_top1"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>
        
        <TextView
            android:id="@+id/tel_400_super_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="超级号"
            android:drawableTop="@drawable/icon_super"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingTop="8dp" 
            android:paddingBottom="8dp"/>
        
        <TextView
            android:id="@+id/tel_400_convenion_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="常规号"
            android:drawableTop="@drawable/icon_convenion"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingTop="8dp" 
            android:paddingBottom="8dp"/>
        
        <TextView
            android:id="@+id/tel_400_mantissa_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="尾数号"
            android:drawableTop="@drawable/icon_mantissa"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <View
            android:id="@+id/tel_400_top_level_icon"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_weight="1"
            android:background="@drawable/icon_current"
            android:gravity="center_horizontal" />

         <View
            android:id="@+id/tel_400_super_level_icon"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_weight="1"
            android:background="@drawable/icon_current_white"
            android:gravity="center_horizontal" />

         <View
            android:id="@+id/tel_400_convenion_level_icon"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_weight="1"
            android:background="@drawable/icon_current_white"
            android:gravity="center_horizontal" />

         <View
            android:id="@+id/tel_400_mantissa_level_icon"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_weight="1"
            android:background="@drawable/icon_current_white"
            android:gravity="center_horizontal" />
    </LinearLayout>
     <ImageView
            android:id="@+id/select_banner"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_promption"
            android:scaleType="fitXY" />
    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:listSelector="@android:color/transparent" >
    </ListView>
</LinearLayout>