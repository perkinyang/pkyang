<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans.xsd 
       http://www.springframework.org/schema/context 
       http://www.springframework.org/schema/context/spring-context.xsd 
       http://www.springframework.org/schema/util 
       http://www.springframework.org/schema/util/spring-util.xsd">

    

    <bean id="cityDao" class="org.mybatis.spring.mapper.MapperFactoryBean" >
        <property name="mapperInterface" value="com.jbb.user.biz.dao.CityDao" />
        <property name="sqlSessionFactory" ref="userSqlSessionFactory" />
    </bean>

    <bean id="findAccountantDao" class="org.mybatis.spring.mapper.MapperFactoryBean" >
        <property name="mapperInterface" value="com.jbb.user.biz.dao.FindAccountantDao" />
        <property name="sqlSessionFactory" ref="userSqlSessionFactory" />
    </bean>

    <bean id="findCompanyDao" class="org.mybatis.spring.mapper.MapperFactoryBean" >
        <property name="mapperInterface" value="com.jbb.user.biz.dao.FindCompanyDao" />
        <property name="sqlSessionFactory" ref="userSqlSessionFactory" />
    </bean>

    <bean id="orderDao" class="org.mybatis.spring.mapper.MapperFactoryBean" >
        <property name="mapperInterface" value="com.jbb.user.biz.dao.CompanyOrderDao" />
        <property name="sqlSessionFactory" ref="userSqlSessionFactory" />
    </bean>
    
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="basePackage" value="com.jbb.user.biz.mapper" />
		<property name="sqlSessionFactoryBeanName" value="userSqlSessionFactory"/>
	</bean>
   <bean id="userDao" class="org.mybatis.spring.mapper.MapperFactoryBean" >
        <property name="mapperInterface" value="com.jbb.user.biz.dao.UserDao" />
        <property name="sqlSessionFactory" ref="userSqlSessionFactory" />
    </bean>
    <bean id="userLoginDao" class="org.mybatis.spring.mapper.MapperFactoryBean" >
        <property name="mapperInterface" value="com.jbb.user.biz.dao.UserLoginDao" />
        <property name="sqlSessionFactory" ref="userSqlSessionFactory" />
    </bean>

    <bean id="companyDao" class="org.mybatis.spring.mapper.MapperFactoryBean" >
        <property name="mapperInterface" value="com.jbb.user.biz.dao.CompanyDao" />
        <property name="sqlSessionFactory" ref="userSqlSessionFactory" />
    </bean>

</beans>